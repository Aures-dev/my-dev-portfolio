{
    "version": 2,
    "builds": [
      {
        "src": "/public/**/*", 
        "use": "@vercel/static"
      },
      {
        "src": "/*.html",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      {
        "src": "/css/(.*)",
        "dest": "/public/css/$1",
        "headers": { "Cache-Control": "public, max-age=31536000" }
      },
      {
        "src": "/js/(.*)",
        "dest": "/public/js/$1",
        "headers": { "Cache-Control": "public, max-age=31536000" }
      },
      {
        "src": "/images/(.*)",
        "dest": "/public/images/$1"
      },
      {
        "src": "/(.*)",
        "dest": "/index.html"
      }
    ]
  }